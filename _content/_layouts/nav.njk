{# revisit this following this example: https://www.11ty.dev/docs/plugins/navigation/#rendering-the-navigation-bar-(nunjucks-only) the Nunjucks Macro Code #}

{% macro renderNavListItem(entry) -%}
<li>
  <a href="{{ entry.url | url }}" {% if entry.url == page.url %} class="my-active-class"{% endif %}>{{ entry.title }}</a>
{%- if entry.children.length -%}
  <ul>
    {%- for child in entry.children %}{{ renderNavListItem(child) }}{% endfor -%}
  </ul>
{%- endif -%}
</li>
{%- endmacro %}
<ul>
{%- for entry in nav %}{{ renderNavListItem(entry) }}{%- endfor -%}
</ul>






